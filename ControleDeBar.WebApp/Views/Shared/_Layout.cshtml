<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <link rel="stylesheet" href="~/lib/bootstrap-dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/app.css" />
    <title>@ViewBag.Titulo - Bar do Zé</title>  
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <nav class="col-lg-2 bg-white sidebar">
                <div class="p-3">
                    <h3 class="nav-title">Bar do Zé</h3>
                    <ul class="nav flex-column gap-2 ms-auto">
                        <li class="nav-item">
                            <a class="nav-link text-primary fw-semibold" href="/">Página Inicial</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-primary fw-semibold" href="/mesas">Mesas</a>
                        </li>
                    </ul>
                </div>
            </nav>
            <header class="main-title d-flex justify-content-center my-4">
                <h2>@ViewBag.Titulo</h2>
            </header>
            <main role="main" class="main-content my-4">
                @RenderBody()
            </main>
            <footer class="footer text-muted">
                <div class="container d-flex justify-content-center">
                    &copy; 2025 - Bar do Zé - <a asp-area="" asp-page="/Privacy">Privacy</a>
                </div>
            </footer>
        </div>
    </div>
    <script src="~/lib/bootstrap-5.3.6-dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>