@model ExcluirGarcomViewModel

@{
    ViewBag.Titulo = "Exclusão de Garçom";
}

<div class="row justify-content-center mx-0 my-5">
    <div class="col-md-8">
        <div class="card rounded-4 border-0">
            <div class="card-body p-md-5">
                <h3>Formulário de Exclusão</h3>

                <p class="mt-4">Você deseja realmente excluir o registro '@Model.Nome'?</p>

                <form action="/garcons/excluir/@Model.Id" method="post">
                    <div class="form-group d-flex align-items-center justify-content-end gap-3">
                        <a href="/garcons">Cancelar</a>
                        <button type="submit" class="btn btn-danger px-5">Confirmar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>