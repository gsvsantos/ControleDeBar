@model VisualizarGarconsViewModel

@{
    ViewBag.Titulo = "Visualização de Garçons";
}

<div class="container-fluid my-5 px-4">
    <p>
        <a class="btn btn-primary px-4 rounded-4" href="/garcons/cadastrar">
            <i class="bi bi-plus"></i>
            Cadastrar Novo Garçom
        </a>
    </p>
    @if (Model.Registros.Count == 0)
    {
        <div class="alert alert-info fade show w-25" role="alert">
            Nenhum garçom cadastrado.
        </div>
    }
    else
    {
    <div class="row g-2">
        @foreach (DetalhesGarcomViewModel garcom in Model.Registros)
        {
        <div class="col-12 col-sm-6 col-md-4 col-lg-4 col-xl-3 mb-3">
            <div class="card rounded-4 border-0">
                <div class="card-body d-flex flex-column">
                    <p class="card-text">
                        <span class="fw-semibold">Id: @garcom.Id.ToString().Substring(0, 13)...</span>
                    </p>
                    <h5 class="card-title">@garcom.Nome</h5>
                    <p class="card-text">
                        <span class="fw-semibold">CPF: @garcom.CPF.FormatarCPF()</span> 
                    </p>
                    <span class="d-flex gap-1 justify-content-end mt-auto">
                        <a href="/garcons/editar/@garcom.Id" class="btn btn-primary rounded-circle opcao-card">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a href="/garcons/excluir/@garcom.Id" class="btn btn-danger rounded-circle opcao-card">
                            <i class="bi bi-trash"></i>
                        </a>
                    </span>
                </div>
            </div>
        </div>
        }
    </div>
    }
</div>