@model ExcluirProdutoViewModel

@{
    ViewBag.Titulo = "Exclusão de Produto";
}

<div class="container-fluid my-5 px-4">
    <div class="card rounded-4 border-0">
        <div class="card-body p-md-5">
            <h3>Formulário de Exclusão</h3>

            @if (ViewData.ModelState["ConflitosVinculos"]?.Errors.Count > 0)
            {
                <div class="alert alert-danger alert-dismissible fade show my-3" role="alert">
                    @ViewData.ModelState["ConflitosVinculos"]!.Errors.First().ErrorMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <p class="mt-4">Você deseja realmente excluir o produto '@Model.Nome'?</p>

            <form action="/produtos/excluir/@Model.Id" method="post">
                <div class="form-group d-flex flex-column align-items-center justify-content-end gap-3">
                    <a href="/produtos" class="btn btn-outline-primary rounded-3 px-2">Cancelar</a>
                    <button type="submit" class="btn btn-danger px-5">Confirmar</button>
                </div>
            </form>
        </div>
    </div>
</div>