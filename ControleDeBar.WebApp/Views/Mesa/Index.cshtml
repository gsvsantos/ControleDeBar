@model VisualizarMesasViewModel

@{
    ViewBag.Titulo = "Visualização de Mesas";
}

<div class="row justify-content-center mx-0 my-5">
    <div class="col-md-8 mx-auto">
        <p>
            <a class="btn btn-primary px-4 rounded-4" href="/mesas/cadastrar">
                <i class="bi bi-plus"></i>
                Cadastrar Nova Mesa
            </a>
        </p>
        @if (Model.Registros.Count == 0)
        {
        <p class="flex-center mx-4">Nenhuma mesa cadastrada.</p>
        }
        else
        {
        <div class="row g-2">
            @foreach (var item in Model.Registros)
            {
            <div class="col-12 col-md-3">
                <div class="card rounded-4 border-0 h-100">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">Mesa #@item.Numero</h5>
                        <p class="card-text">
                            <span class="fw-semibold">Cadeiras: @item.Capacidade</span> 
                        </p>
                        <span class="d-flex gap-1 justify-content-end mt-auto">
                            <a href="/mesas/detalhes/@item.Id" class="btn btn-secondary rounded-circle opcao-card">
                                <i class="bi bi-search"></i>
                            </a>
                            <a href="/mesas/editar/@item.Id" class="btn btn-primary rounded-circle opcao-card">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a href="/mesas/excluir/@item.Id" class="btn btn-danger rounded-circle opcao-card">
                                <i class="bi bi-trash"></i>
                            </a>
                        </span>
                    </div>
                </div>
            </div>
            }
        </div>
        }
    </div>
</div>